{
  "name": "it-tools-desktop",
  "version": "1.0.0",
  "description": "Une suite d'outils informatiques pour les d√©veloppeurs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "it-tools",
    "developer-tools",
    "utilities"
  ],
  "author": "Votre Nom",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "cron-parser": "^4.9.0",
    "crypto-js": "^4.2.0",
    "diff": "^5.1.0",
    "fs": "^0.0.1-security",
    "highlight.js": "^11.9.0",
    "ip-subnet-calculator": "^1.1.8",
    "js-beautify": "^1.14.9",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "marked": "^5.1.0",
    "papaparse": "^5.4.1",
    "sql-formatter": "^12.2.4",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.yourcompany.it-tools",
    "productName": "IT-Tools Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!*.md",
      "!LICENSE",
      "!package-lock.json",
      "!node_modules/*/test/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.git",
      "!.editorconfig",
      "!.gitignore",
      "!.eslintrc.js",
      "!.prettierrc"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/app-icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/app-icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development;Utility",
      "icon": "assets/icons/app-icon.png"
    }
  }
}
